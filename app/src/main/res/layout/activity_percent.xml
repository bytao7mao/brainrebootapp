<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".cardActivities.PercentActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/delimitationBarIdFirst"
        style="@style/Divider"
        android:layout_height="0.2dp"
        android:alpha="0.5"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/delimitationBarIdFirst">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="16dp"
                android:text="@string/health_progress"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subTextEnergyId"
                style="@style/TextColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:fontFamily="@font/robotomedium"
                android:text="@string/energy"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_75percentPercent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25percentPercent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_energy" />

            <TextView
                android:id="@+id/subTextEnergyIdExplanation"
                style="@style/TextColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:text="@string/energy_explanation"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subTextEnergyId" />

            <TextView
                android:id="@+id/subTextBreathId"
                style="@style/TextColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:fontFamily="@font/robotomedium"
                android:text="@string/breath"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_75percentPercent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25percentPercent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_breath" />

            <TextView
                android:id="@+id/subTextBreathIdExplanation"
                style="@style/TextColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:text="@string/breath_explanation"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subTextBreathId" />

            <TextView
                android:id="@+id/subTextHeartId"
                style="@style/TextColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:fontFamily="@font/robotomedium"
                android:text="@string/fatigue"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_75percentPercent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25percentPercent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_heart" />

            <TextView
                android:id="@+id/subTextHeartIdExplanation"
                style="@style/TextColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:text="@string/heart_explanation"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subTextHeartId" />

            <TextView
                android:id="@+id/subTextBloodId"
                style="@style/TextColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:fontFamily="@font/robotomedium"
                android:text="@string/gums"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_75percentPercent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25percentPercent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_blood" />

            <TextView
                android:id="@+id/subTextBloodIdExplanation"
                style="@style/TextColorBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:text="@string/blood_explanation"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subTextBloodId" />

            <com.budiyev.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar_energy"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                app:animateProgress="true"
                app:backgroundStrokeColor="@color/grey_300"
                app:backgroundStrokeWidth="8dp"
                app:drawBackgroundStroke="true"
                app:foregroundStrokeCap="butt"
                app:foregroundStrokeColor="@color/colorPrimary"
                app:foregroundStrokeWidth="8dp"
                app:indeterminate="false"
                app:indeterminateMinimumAngle="45"
                app:indeterminateRotationAnimationDuration="1200"
                app:indeterminateSweepAnimationDuration="600"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_75percentPercent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25percentPercent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:maximum="100"
                app:progress="50"
                app:progressAnimationDuration="100"
                app:startAngle="270" />
            <!--                    app:foregroundStrokeColor="#6200EE"-->

            <com.budiyev.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar_breath"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                app:animateProgress="true"
                app:backgroundStrokeColor="@color/grey_300"
                app:backgroundStrokeWidth="8dp"
                app:drawBackgroundStroke="true"
                app:foregroundStrokeCap="butt"
                app:foregroundStrokeColor="@color/colorPrimary"
                app:foregroundStrokeWidth="8dp"
                app:indeterminate="false"
                app:indeterminateMinimumAngle="45"
                app:indeterminateRotationAnimationDuration="1200"
                app:indeterminateSweepAnimationDuration="600"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_75percentPercent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25percentPercent"
                app:layout_constraintTop_toBottomOf="@+id/subTextHeartIdExplanation"
                app:maximum="100"
                app:progress="50"
                app:progressAnimationDuration="100"
                app:startAngle="270" />

            <com.budiyev.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar_heart"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                app:animateProgress="true"
                app:backgroundStrokeColor="@color/grey_300"
                app:backgroundStrokeWidth="8dp"
                app:drawBackgroundStroke="true"
                app:foregroundStrokeCap="butt"
                app:foregroundStrokeColor="@color/colorPrimary"
                app:foregroundStrokeWidth="8dp"
                app:indeterminate="false"
                app:indeterminateMinimumAngle="45"
                app:indeterminateRotationAnimationDuration="1200"
                app:indeterminateSweepAnimationDuration="600"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_75percentPercent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25percentPercent"
                app:layout_constraintTop_toBottomOf="@+id/subTextEnergyIdExplanation"
                app:maximum="100"
                app:progress="50"
                app:progressAnimationDuration="100"
                app:startAngle="270" />

            <com.budiyev.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar_blood"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                app:animateProgress="true"
                app:backgroundStrokeColor="@color/grey_300"
                app:backgroundStrokeWidth="8dp"
                app:drawBackgroundStroke="true"
                app:foregroundStrokeCap="butt"
                app:foregroundStrokeColor="@color/colorPrimary"
                app:foregroundStrokeWidth="8dp"
                app:indeterminate="false"
                app:indeterminateMinimumAngle="45"
                app:indeterminateRotationAnimationDuration="1200"
                app:indeterminateSweepAnimationDuration="600"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_75percentPercent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25percentPercent"
                app:layout_constraintTop_toBottomOf="@+id/subTextBreathIdExplanation"
                app:maximum="100"
                app:progress="50"
                app:progressAnimationDuration="100"
                app:startAngle="270" />

            <TextView
                android:id="@+id/txtProgressIdForEnergy"
                style="@style/TextColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="@string/quotation_mark"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_energy"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_energy"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_energy"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_energy" />

            <TextView
                android:id="@+id/txtProgressIdForBreath"
                style="@style/TextColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="@string/quotation_mark"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_breath"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_breath"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_breath"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_breath" />

            <TextView
                android:id="@+id/txtProgressIdForHeart"
                style="@style/TextColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="@string/quotation_mark"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_heart"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_heart"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_heart"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_heart" />

            <TextView
                android:id="@+id/txtProgressIdForBlood"
                style="@style/TextColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="@string/quotation_mark"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_blood"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_blood"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_blood"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_blood" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_15percentPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_25percentPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal_30percentPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.30" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_50percentPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_75percentPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
