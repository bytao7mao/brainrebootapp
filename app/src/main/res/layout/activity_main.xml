                        app:layout_constraintTop_toTopOf="@+id/progress_bar_energy" />
                    <TextView
                        android:id="@+id/txtProgressIdForBreath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:text="5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        style="@style/TextColorBlack"
                        app:layout_constraintBottom_toBottomOf="@+id/progress_bar_breath"
                        app:layout_constraintEnd_toEndOf="@+id/progress_bar_breath"
                        app:layout_constraintStart_toStartOf="@+id/progress_bar_breath"
                        app:layout_constraintTop_toTopOf="@+id/progress_bar_breath"/>
                    <TextView
                        android:id="@+id/txtProgressIdForFatigue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:text="100"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        style="@style/TextColorBlack"
                        app:layout_constraintBottom_toBottomOf="@+id/progress_bar_fatigue"
                        app:layout_constraintEnd_toEndOf="@+id/progress_bar_fatigue"
                        app:layout_constraintStart_toStartOf="@+id/progress_bar_fatigue"
                        app:layout_constraintTop_toTopOf="@+id/progress_bar_fatigue"/>
                    <TextView
                        android:id="@+id/txtProgressIdForGums"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300"
                        android:alpha="0.8"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        style="@style/TextColorBlack"
                        app:layout_constraintBottom_toBottomOf="@+id/progress_bar_gums"
