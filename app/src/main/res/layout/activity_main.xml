<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/mainContentId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <!--start of days counter-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginTop="60dp"
                tools:context=".MainActivity">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_mainID"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="3dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="380dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/brozs" />
                <ImageView
                    android:id="@+id/tipImageId"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/idea" />

                <TextView
                    android:id="@+id/tipofthedayTxtViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tipImageId"
                    android:paddingTop="20dp"
                    style="@style/TextColor"
                    android:text="Today you can be whatever you want!" />

                <!--app:wlv_borderWidth="3dp"-->
                <!--<me.itangqi.waveloadingview.WaveLoadingView-->
                    <!--android:id="@+id/waveLoadingIdBigger"-->
                    <!--android:layout_width="150dp"-->
                    <!--android:layout_height="150dp"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginTop="52dp"-->
                    <!--android:layout_marginRight="20dp"-->

                    <!--app:wlv_borderColor="@color/colorPrimary"-->
                    <!--app:wlv_round_rectangle="true"-->
                    <!--app:wlv_shapeType="circle"-->
                    <!--app:wlv_titleBottomColor="@color/white"-->
                    <!--app:wlv_titleBottomSize="24dp"-->
                    <!--app:wlv_titleBottomStrokeColor="@android:color/holo_blue_dark"-->
                    <!--app:wlv_titleBottomStrokeWidth="3dp"-->
                    <!--app:wlv_titleCenterColor="@color/white"-->

                    <!--app:wlv_titleCenterSize="24dp"-->
                    <!--app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"-->
                    <!--app:wlv_titleCenterStrokeWidth="3dp"-->
                    <!--app:wlv_titleTopColor="@color/white"-->

                    <!--app:wlv_titleTopSize="24dp"-->
                    <!--app:wlv_titleTopStrokeColor="@android:color/holo_blue_dark"-->
                    <!--app:wlv_titleTopStrokeWidth="3dp"-->
                    <!--app:wlv_triangle_direction="north"-->

                    <!--app:wlv_waveAmplitude="70"-->
                    <!--app:wlv_waveColor="@color/colorAccent" />-->

                <RelativeLayout
                    android:id="@+id/rltvlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13.5dp">

                    <ImageView
                        android:id="@+id/counterImageId"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/days" />

                    <TextView
                        android:id="@+id/counterTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        style="@style/TextColor2"
                        android:textSize="60sp" />
                </RelativeLayout>
                <!--end of days counter-->

                <ImageView
                    android:id="@+id/targetImageId"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="250dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/target" />

                <TextView
                    android:id="@+id/targetTxtViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="250dp"
                    android:layout_toRightOf="@id/targetImageId"
                    android:paddingLeft="5dp"
                    android:paddingTop="20dp"
                    style="@style/TextColor"
                    android:text="Current target: " />

                <com.budiyev.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/progress_bar_outer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignRight="@id/targetTxtViewId"
                    android:layout_marginTop="270dp"
                    android:layout_marginRight="-50dp"
                    android:paddingTop="20dp"
                    app:animateProgress="true"
                    app:backgroundStrokeColor="#ff3f51b5"
                    app:backgroundStrokeWidth="2dp"
                    app:drawBackgroundStroke="true"
                    app:foregroundStrokeCap="butt"
                    app:foregroundStrokeColor="#ffff4081"
                    app:foregroundStrokeWidth="3dp"
                    app:indeterminate="false"
                    app:indeterminateMinimumAngle="45"
                    app:indeterminateRotationAnimationDuration="1200"
                    app:indeterminateSweepAnimationDuration="600"
                    app:maximum="100"
                    app:progress="50"
                    app:progressAnimationDuration="100"
                    app:startAngle="270" />

                <TextView
                    android:id="@+id/remaining_days_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="275dp"
                    style="@style/TextColor"
                    android:layout_toRightOf="@id/progress_bar_outer"
                    android:text="@string/remaining_days" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/delimitationBarId"
                    style="@style/Divider"
                    android:layout_below="@id/card_view_mainID"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@id/delimitationBarId">
                <FrameLayout
                    android:id="@+id/frameCardId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/progressCardId"
                        android:layout_width="340dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.8"
                            android:background="@drawable/lowera" />

                        <TextView
                            android:id="@+id/progressActivityId"
                            style="@style/TextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/progressCardId"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="ProgressActivity
   Get started on the life you want" />

                        <com.budiyev.android.circularprogressbar.CircularProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            app:animateProgress="true"
                            app:backgroundStrokeColor="#ff3f51b5"
                            app:backgroundStrokeWidth="2dp"
                            app:drawBackgroundStroke="true"
                            app:foregroundStrokeCap="butt"
                            app:foregroundStrokeColor="#ffff4081"
                            app:foregroundStrokeWidth="3dp"
                            app:indeterminate="false"
                            app:indeterminateMinimumAngle="45"
                            app:indeterminateRotationAnimationDuration="1200"
                            app:indeterminateSweepAnimationDuration="600"
                            app:maximum="100"
                            app:progress="50"
                            app:progressAnimationDuration="100"
                            app:startAngle="270" />
                        <!--app:wlv_borderWidth="3dp"-->
                    </android.support.v7.widget.CardView>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameCardId2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/frameCardId">

                    <android.support.v7.widget.CardView
                        android:id="@+id/progressCardId2"
                        android:layout_width="340dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.8"
                            android:background="@drawable/cardlowered" />

                        <TextView
                            android:id="@+id/moneyortimeId"
                            style="@style/TextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Savings Total = 50$ or 50 hours" />

                    </android.support.v7.widget.CardView>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameCardId3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/frameCardId2">

                    <android.support.v7.widget.CardView
                        android:id="@+id/progressCardId3"
                        android:layout_width="340dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="60dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.8"
                            android:background="@drawable/test2" />

                        <TextView
                            android:id="@+id/moneyortimeId2"
                            style="@style/TextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="see your Personal logs - failures" />

                    </android.support.v7.widget.CardView>
                </FrameLayout>

                <TextView
                    android:id="@+id/txtProgressId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/frameCardId"
                    android:layout_marginLeft="277dp"
                    android:layout_marginTop="32dp"
                    android:text="0"
                    android:textColor="@color/white" />
            </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
    <!--end of mainContent-->

    <include
        layout="@layout/app_bar_mainactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main2_drawer" />

</android.support.v4.widget.DrawerLayout>

