<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:translationZ="0.1dp"
        android:background="@color/white"
        android:theme="@style/MaterialTheme.NoActionBar">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextAppearance="@style/TitleBarStyle"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:popupTheme="@style/MaterialTheme.NoActionBar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="-56dp"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:padding="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="new post image"
                    android:src="@mipmap/leaf"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/toolbar_subtitle"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:alpha="0.8"
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:id="@+id/delimitationBarId"
                style="@style/Divider"
                android:alpha="0.5"
                android:layout_height="0.2dp"
                android:background="@android:color/darker_gray" />
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <com.github.fabtransitionactivity.SheetLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottom_sheet"
            app:ft_container_gravity="center"
            android:elevation="2dp"
            app:ft_color="@color/colorPrimary">
        </com.github.fabtransitionactivity.SheetLayout>
        <io.codetail.widget.RevealFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <include
                        layout="@layout/activity_main_lower_body"
                        tools:context=".MainActivity" />
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </io.codetail.widget.RevealFrameLayout>
        <include layout="@layout/activity_main_fab" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
