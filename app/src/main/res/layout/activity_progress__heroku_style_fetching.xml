<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rltvlayoutOuter"
    tools:context=".ProgressCard.ProgressActivity_HerokuStyleFetching">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rltvlayout">

        <include
            android:id="@+id/card_oneId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/material_card_one_progressactivity" />

        <include
            android:id="@+id/card_twoId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/card_oneId"
            layout="@layout/material_card_two_progressactivity" />
        <include
            android:id="@+id/card_threeId"
            android:layout_below="@id/card_twoId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            layout="@layout/material_card_three_progressactivity" />
        <include
            android:id="@+id/card_fourId"
            android:layout_below="@id/card_threeId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            layout="@layout/material_card_four_progressactivity" />

