        <TextView
            android:id="@+id/savingsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addSavingsBtnId"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotomedium"
            android:alpha="0.8"
            android:padding="6dp"
            android:text="@string/total_money_saved"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/savingsTxtResult"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/savingsTxt"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/robotomedium"
            android:alpha="0.8"
            android:text="6.000.000$"
            android:textSize="38sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/savingsTxtResult"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_money"
            android:contentDescription="@string/total_money_saved_icon_made" />

