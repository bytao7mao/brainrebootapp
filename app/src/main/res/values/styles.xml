<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MaterialTheme" parent="ParentMaterialTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="ParentMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Parent theme For all Pre - lollipop and lollipop above versions i.e. For all devices -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spinBars">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@assets/@fonts/Montserrat-Black.ttf</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleBarTextAppearance2" parent="android:TextAppearance">
        <item name="android:fontFamily">@assets/@fonts/Montserrat-Black.ttf</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:color">@color/divider</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="TextColor2">
        <item name="android:textColor">#C21753</item>
    </style>
    <style name="TextColorErr">
        <item name="android:textColor">#FF0000</item>
    </style>
    <style name="TextColorBlack">
        <item name="android:textColor">#5C5C5C</item>
    </style>
    <style name="TextColorWhite">
        <item name="android:textColor">#FFFAF1</item>
    </style>

    <style name="MaterialTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BarLoading" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item></style>

