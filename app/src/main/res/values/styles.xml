<resources>

    <style name="MaterialThemeNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialThemeNoActionBarW" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">12sp</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MaterialThemeWithActionBar" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">12sp</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="EditTextCustomTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="TitleBarStyle" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@transition/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@transition/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@transition/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@transition/slide_out_right</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:color">@color/divider</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TextColorErr">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="TextColorBlack">
        <item name="android:textColor">#5C5C5C</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>

</resources>
