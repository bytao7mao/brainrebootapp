    <supports-screens
        android:smallScreens="true"
        android:anyDensity="true"
        android:xlargeScreens="true"
        android:largeScreens="true"
        android:normalScreens="true"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="preferExternal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/MaterialThemeNoActionBar"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:icon">

        <provider
            android:name=".GenericFileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true"/>

        <!-- Sample AdMob App ID: ca-app-pub-8605805180436473~8997590254 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8605805180436473~8997590254"/>

        <activity android:name=".SplashActivity"
            android:theme="@style/MaterialThemeNoActionBarW">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FirstScreenActivity"
            android:theme="@style/MaterialThemeNoActionBarW"
            android:excludeFromRecents="true" />
        <activity android:name=".cardActivities.AchievmentsActivity"
            android:theme="@style/MaterialThemeNoActionBarW"/>
        <activity android:name=".options.AboutActivity"
            android:theme="@style/MaterialThemeNoActionBarW"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/MaterialThemeWithActionBar">
        </activity>
        <activity android:name=".cardActivities.SavingsActivity"
            android:theme="@style/MaterialThemeNoActionBarW"/>
        <activity android:name=".cardActivities.ChallengeActivity" />
        <activity android:name=".options.OptionsActivity"
            android:theme="@style/MaterialThemeNoActionBarW"/>

        <service android:name=".notif.MyFirebaseMessagingService" />
        <service android:name=".notif.MyNewIntentService" />

        <receiver
            android:name="notif.MyReceiver"
            android:enabled="true"
            android:exported="false"></receiver>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>